    "next:dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "slicemachine": "start-slicemachine",
    "next-sitemap": "next-sitemap",
    "analyze": "ANALYZE=true yarn build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prismicio/client": "^7.4.1",
